#! /bin/bash
echo '------------------------'
echo ' update to ruby version'
echo '------------------------'
echo 'cd app_path'
echo 'vi .ruby-version'
echo '# set desired verion in the file (i.e. 2.5.8)'
echo 'cd ..'
echo 'cd app_path'
echo '# if desired version isn't on the machine yet, rvm will tell you how to install it.  Using for exmaple...'
echo 'rvm install "ruby-2.5.8"'
echo 'ruby -v'
echo '# should be the correct version, in this example, 2.5.8'
echo '# rvm doesn't have bundler installed in default, so have to install it for every ruby'
echo 'gem install bundler'
echo '# if incompatible version of bundler installed, delete and install specific version using...'
echo 'gem list bundler'
echo 'gem install bundler --version 1.4.7'
echo 'gem uninstall bundler --version 2.1'
echo '------------'

